<?php $collection = $this->_getCollection(); ?>
<?php if (count($collection) > 0) : ?>
	<section class="main-home-3-1">
		<header>Brands we serve</header>
		<figure class="scroller-button-left">
			<a class="prev"><img src="<?php echo $this->getSkinUrl('images/arow-left.png') ?>" alt="Previous"></a>
