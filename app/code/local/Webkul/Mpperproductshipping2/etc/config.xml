<?xml version="1.0"?>
<config>
    <modules>
        <Webkul_Mpperproductshipping2>
            <version>0.1.1</version>
        </Webkul_Mpperproductshipping2>
    </modules>
	<default>
		<carriers>
			<mpperproductshipping2>
				<active>1</active>
				<allowed_methods>delivery</allowed_methods>
				<methods>delivery</methods>
				<sallowspecific>0</sallowspecific>
				<model>Webkul_Mpperproductshipping2_Model_Carrier_LocalDelivery</model>
				<name>MP Per Product Shipping 2</name>
				<defalt_ship_amount>10</defalt_ship_amount>
				<title>Custom Per Product Shipping 2</title>
				<specificerrmsg>This shipping method is currently unavailable. If
				  you would like to ship using this shipping method, please contact
				  us.
				</specificerrmsg>
				<handling_type>F</handling_type>
			</mpperproductshipping2>
		</carriers>
	</default>
	 <frontend>
        <!--routers>
            <mpshipping>
                <use>standard</use>
                <args>
                    <module>Webkul_Mpshipping</module>
                    <frontName>mpshipping</frontName>
                </args>
            </mpshipping>
        </routers-->
        <layout>
            <updates>
                <mpperproductshipping2>
                    <file>mpperproductshipping2.xml</file>
                </mpperproductshipping2>
            </updates>
        </layout>
    </frontend>  
    <global>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                   <Webkul_Mpperproductshipping2_Model_Observer>
                      <type>singleton</type>
                        <class>Webkul_Mpperproductshipping2_Model_Observer</class>
                        <method>afterPlaceOrder</method>
                   </Webkul_Mpperproductshipping2_Model_Observer>
               </observers>
            </checkout_onepage_controller_success_action>
        </events>
        <models>
            <mpperproductshipping2>
                <class>Webkul_Mpperproductshipping2_Model</class>
            </mpperproductshipping2>
        </models>
        <resources>
            <mpperproductshipping2_setup>
                <setup>
                    <module>Webkul_Mpperproductshipping2</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mpperproductshipping2_setup>
            <mpperproductshipping2_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mpperproductshipping2_write>
            <mpperproductshipping2_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mpperproductshipping2_read>
        </resources>
        <!--template>
            <email>
                <trackingnopartner>
                    <label>Tracking No Partner</label>
                    <file>marketplacepartner/trackingnopartner.html</file>
                    <type>html</type>
                </trackingnopartner>
            </email>
        </template-->
        <helpers>
            <mpperproductshipping2>
                <class>Webkul_Mpperproductshipping2_Helper</class>
            </mpperproductshipping2>
        </helpers>
    </global>
</config>
