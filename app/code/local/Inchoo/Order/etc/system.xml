<?xml version="1.0"?>
<config>
    <sections>
        <cancel_order_notification  translate="label" module="order">
            <label>Cancel Order Notification</label>
            <tab>inchoo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>3</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cancel_order_email_notification translate="label">
                    <label>Cancel Order Notification</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cancel_order_enable translate="label">
                            <label>Enable Send Cancel Order Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cancel_order_enable>
                        <cancel_order_email translate="label">
                            <label>Send Cancel Order Email To</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cancel_order_email>
                    </fields>
                </cancel_order_email_notification>
            </groups>
        </cancel_order_notification>
    </sections>
</config>
